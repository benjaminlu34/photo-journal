    "dev:replit": "cross-env REPLIT=true pnpm dev",
    "dev:local": "dotenv -e .env.local -- nodemon --exec tsx server/index.ts",
    "dev:supabase": "dotenv -e .env.supabase -- nodemon --exec tsx server/index.ts",
    "db:init": "dotenv -e .env -- bash ./scripts/db-init.sh",
    "db:push:local": "dotenv -e .env.local -- drizzle-kit push",
    "db:push:supabase": "dotenv -e .env.supabase -- drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate-colors": "dotenv -e .env.local -- tsx scripts/migrate-note-colors.ts",
    "db:migrate-colors:dry": "dotenv -e .env.local -- tsx scripts/migrate-note-colors.ts --dry-run",
    "db:migrate-colors:supabase": "dotenv -e .env.supabase -- tsx scripts/migrate-note-colors.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:pg": "pg_prove -U postgres -d photo_journal tests/pg-tap/*.sql",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc"
  },
